<p id="notice"><%= notice %></p>

<h1>Listing Subcontractors</h1>

<table>
  <thead>
    <tr>
      <th>Bp</th>
      <th>Company</th>
      <th>Contact</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Trade</th>
      <th>Contract value</th>
      <th>Logo</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcontractors.each do |subcontractor| %>
      <tr>
        <td><%= subcontractor.bp %></td>
        <td><%= subcontractor.company %></td>
        <td><%= subcontractor.contact %></td>
        <td><%= subcontractor.address %></td>
        <td><%= subcontractor.phone %></td>
        <td><%= subcontractor.trade %></td>
        <td><%= subcontractor.contract_value %></td>
        <td><%= subcontractor.logo %></td>
        <td><%= subcontractor.notes %></td>
        <td><%= link_to 'Show', subcontractor %></td>
        <td><%= link_to 'Edit', edit_subcontractor_path(subcontractor) %></td>
        <td><%= link_to 'Destroy', subcontractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

